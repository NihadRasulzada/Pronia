@model Pronia.MVC.Models.Slider

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-body">
            <div class="container-fluid">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Offer">Slider Offer</label>
                        <input asp-for="Offer" class="form-control">
                        <span asp-validation-for="Offer"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Title">Slider Title</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Slider Description</label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">Slider Photo</label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>
